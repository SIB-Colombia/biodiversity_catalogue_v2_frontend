var _templateObject = _taggedTemplateLiteral(['\n  border: 1px solid ', ';\n  border-width: 0 0 1px;\n  width: 100%;\n'], ['\n  border: 1px solid ', ';\n  border-width: 0 0 1px;\n  width: 100%;\n']);

function _taggedTemplateLiteral(strings, raw) { return Object.freeze(Object.defineProperties(strings, { raw: { value: Object.freeze(raw) } })); }

